
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Permite leitura e escrita em todos os documentos para qualquer usuário autenticado.
    // Isso é seguro porque o acesso ao aplicativo requer login.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
